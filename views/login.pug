extends layout

block content
  h1= title
  p Welcome guest.

  .main.container
    form(method='POST' action='/login')
      div.form-group
        label(for='name') Name:
        input#name.form-control(type='text', name='name')
      div.form-group
        label(for='pw') Password:
        input#pw.form-control(type='password' name='password')
      button.btn.btn-primary(type='submit') Log in
